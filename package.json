{
  "name": "testes-bugbank-cypress",
  "version": "1.0.0",
  "description": "projeto de testes da aplicação BugBank",
  "main": "index.js",
  "scripts": {
    "test": "npx cypress run --browser chrome --spec \"cypress/e2e/**/*.cy.js\"",
    "test:regression": "npx cypress run --browser chrome --env grepTags=@regression",
    "test:regression:open": "npx cypress open --browser chrome --env grepTags=@regression",
    "allure:clean": "rm -rf allure-results/ allure-report",
    "allure:run": "npx cypress run --env allure=true",
    "allure:report": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:test": "npm run allure:clean && npm run allure:run && npm run allure:report && npm run allure:open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entonymaxwell01/testes-bugbank-cypress.git"
  },
  "author": "Entony Maxwell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entonymaxwell01/testes-bugbank-cypress/issues"
  },
  "homepage": "https://github.com/entonymaxwell01/testes-bugbank-cypress#readme",
  "devDependencies": {
    "@cypress/grep": "^4.1.0",
    "@faker-js/faker": "^9.8.0",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^14.4.1",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  }
}
